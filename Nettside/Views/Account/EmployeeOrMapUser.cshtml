@using Microsoft.AspNetCore.Identity;

@inject UserManager<Users> UserManager

<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />

<head>
    <title class="title">Privatperson eller ansatt</title>
</head>
<body class="option-site">
    <div class="site-container">

        @* Form for role selection *@
        <form method="get">
            @* Ttitle prompting the user to choose a role *@
            <h1 class="site-title" style="text-align: center"> Er du privatperson eller ansatt?</h1>
           
            <div class="site-box">
                @* Button for private users to navigate to the Register action *@
                <button type="submit" name="userRole" asp-action="Register" value="PrivateUser" class="role-button">
                    Jeg er privatperson
                </button>

                @* Button for employees to navigate to the RegisterCaseWworker action *@
                <button type="submit" name="userRole" asp-action="RegisterCaseworker" class="role-button">
                    Jeg er ansatt
                </button>
            </div>
        </form>
    </div>
</body>



   
